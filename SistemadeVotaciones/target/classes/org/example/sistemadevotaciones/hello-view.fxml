<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.sistemadevotaciones.VotingController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label text="IP Address:"/>
    <TextField fx:id="ipField" text="localhost"/>
    <Label text="Port:"/>
    <TextField fx:id="portField" text="12345"/>
    <Button text="Connect" onAction="#onConnectButtonClick"/>

    <Button text="Vote Option1" onAction="#onVoteOption1Click"/>
    <Button text="Vote Option2" onAction="#onVoteOption2Click"/>
    <Button text="Vote Option3" onAction="#onVoteOption3Click"/>

    <Label fx:id="option1Count" text="Option1: 0"/>
    <Label fx:id="option2Count" text="Option2: 0"/>
    <Label fx:id="option3Count" text="Option3: 0"/>
    <Label fx:id="totalCount" text="Total Votes: 0"/>
</VBox>
